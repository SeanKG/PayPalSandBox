<div ng-app="exploreApp">

    <div ng-controller="appCtrl as ctrl" class="row">

        <div class="col-md-4">
            <h2>Cards</h2>
            <h4 ng-if="ctrl.loading.cards">Loading...</h4>
            <div class="panel"
                 ng-repeat="card in ctrl.cardsList.items"
                 ng-class="ctrl.getCardStateClass(card)"
                 ng-click="ctrl.log(card)">
                <div class="panel-heading">{{card.id}}</div>
                <div class="panel-body">
                    <a class="btn btn-danger pull-right" href="" ng-click="ctrl.deleteCard(card)" role="button">Delete</a>
                    <div>{{card.number}} <strong>{{card.type}}</strong></div>
                    <div>expires: <strong>{{card.expire_month}}</strong>/<strong>{{card.expire_year}}</strong></div>
                    <div>external_customer_id: <strong>{{card.external_customer_id}}</strong></div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <h2>Payments</h2>
            <h4 ng-if="ctrl.loading.payments">Loading...</h4>
            <div class="panel"
                 ng-class="ctrl.getPaymentStateClass(payment)"
                 ng-repeat="payment in ctrl.paymentsList.payments"
                 ng-click="ctrl.log(payment)">
                <div class="panel-heading">{{payment.id}}</div>
                <div class="panel-body">
                    <a class="btn btn-primary pull-right" href="{{ctrl.findRedirectLink(payment.links)}}" role="button" ng-if="payment.state !== 'approved'">Execute</a>
                   
                    <div>Payment Method: <strong>{{payment.payer.payment_method}}</strong></div>
                    <div>State: <strong>{{payment.state}}</strong></div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            
            <div>
                <h2>Create Payment</h2>
            
                <form novalidate class="form-horizontal">
                    <div class="form-group">
                        <label for="inputcard_id3" class="col-sm-2 control-label">card_id</label>
                        <div class="col-sm-10">
                            <input required type="text" class="form-control" id="inputcard_id3" placeholder="card_id" ng-model="ctrl.newPaypalPayment.card_id">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputinvoice_number3" class="col-sm-2 control-label">invoice_number</label>
                        <div class="col-sm-10">
                            <input required type="text" class="form-control" id="inputinvoice_number3" placeholder="invoice_number" ng-model="ctrl.newPaypalPayment.invoice_number">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtotal3" class="col-sm-2 control-label">total</label>
                        <div class="col-sm-10">
                            <input required type="text" class="form-control" id="inputtotal3" placeholder="total" ng-model="ctrl.newPaypalPayment.total">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputdescription3" class="col-sm-2 control-label">description</label>
                        <div class="col-sm-10">
                            @*<input type="number" class="form-control" id="inputdescription3" placeholder="description" ng-model="ctrl.newPaypalPayment.description">*@
                            <textarea class="form-control" rows="3" ng-model="ctrl.newPaypalPayment.description"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default" ng-click="ctrl.createPaypalPayment()">Create</button>
                        </div>
                    </div>
                </form>
            
                <pre>{{ctrl.newPaypalPayment | json}}</pre>
            </div>

            
            
            <div>
                <h2>Create Card</h2>

                <form novalidate class="form-horizontal">
                    <div class="form-group">
                        <label for="inputexpire_month3" class="col-sm-2 control-label">expire_month</label>
                        <div class="col-sm-10">
                            <input required type="number" class="form-control" id="inputexpire_month3" placeholder="expire_month" ng-model="ctrl.newCard.expire_month">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputexpire_year3" class="col-sm-2 control-label">expire_year</label>
                        <div class="col-sm-10">
                            <input required type="number" class="form-control" id="inputexpire_year3" placeholder="expire_year" ng-model="ctrl.newCard.expire_year">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputnumber3" class="col-sm-2 control-label">number</label>
                        <div class="col-sm-10">
                            <input required type="number" class="form-control" id="inputnumber3" placeholder="number" ng-model="ctrl.newCard.number">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtype3" class="col-sm-2 control-label">type</label>
                        <div class="col-sm-10">
                            <input required type="text" class="form-control" id="inputtype3" placeholder="type" ng-model="ctrl.newCard.type">
                        </div>
                    </div>
                    <div class="form-group">
