                        <div class="col-sm-10">
                            <input required type="number" class="form-control" id="inputcvv23" placeholder="cvv2" ng-model="ctrl.newCard.cvv2">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputexternal_customer_id3" class="col-sm-2 control-label">external_customer_id</label>
                        <div class="col-sm-10">
                            <input required type="text" class="form-control" id="inputexternal_customer_id3" placeholder="external_customer_id" ng-model="ctrl.newCard.external_customer_id">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default" ng-click="ctrl.createCard()">Create</button>
                        </div>
                    </div>
                </form>

                <pre>{{ctrl.newCard | json}}</pre>
            </div>

            
            

        </div>

    </div> @*/ ng-controller*@

